# Backend Environment Variables for Production

# Environment Configuration
NODE_ENV=production
PORT=5000

# Database (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster0.eeigr.mongodb.net/skillbarter?retryWrites=true&w=majority&appName=Cluster0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-very-long-and-secure
JWT_EXPIRE=7d

# Frontend URL (Vercel deployment)
FRONTEND_URL=https://your-skillbarter-app.vercel.app

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Jitsi Meet
JITSI_DOMAIN=meet.jit.si
JITSI_APP_ID=skillbarter-app
